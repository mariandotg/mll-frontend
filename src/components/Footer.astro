---
const { default: instagramRaw } = await import(`../../public/icons/instagram.svg?raw`);
const { default: facebookRaw } = await import(`../../public/icons/facebook.svg?raw`);
const { default: youtubeRaw } = await import(`../../public/icons/youtube.svg?raw`);

---

<footer class="footer">
    <div class="container">
        Seguinos en nuestras redes!
      <div class="footer-content">
        <a href="https://www.instagram.com/manteniendolalineaok/" target="_blank" rel="noopener noreferrer">
          <div class="social-icon fill-white hover:fill-primary-green" >
            <Fragment set:html={instagramRaw}/>
        </div>
        </a>
        <a href="https://www.facebook.com/Manteniendolalinea" target="_blank" rel="noopener noreferrer">
          <div class="social-icon fill-white hover:fill-primary-green" >
            <Fragment set:html={facebookRaw}/>
        </div>
        </a>
        <a href="https://www.youtube.com/@fmfenixdemartinez/videos" target="_blank" rel="noopener noreferrer">
            <div class="social-icon fill-white hover:fill-primary-green" >
              <Fragment set:html={youtubeRaw}/>
          </div>
        </a>
      </div>
    </div>
  </footer>
  
  <style>
    .footer {
      padding: 1rem 0;
      text-align: center;
      color: #fff;
      margin-top: 32px;
      margin-bottom: 32px;
    }
  
    .footer .container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 32px;
    }
  
    .footer-content {
      display: flex;
      gap: 1rem;
      fill: #fff;
    }
  
    .social-icon {
      width: 24px;
      height: 24px;
    }
  </style>
  